{
	"$schema": "http://schemas.wp.org/trunk/theme.json",
	"version": 2,
	"settings": {
		"border": {
			"color": true
		},
		"shadow": {
			"palette": [
				{
					"name": "Twitch",
					"slug": "twitch",
					"shadow": "5px 5px 0px -2px red, 5px 5px red"
				}
			]
		},
		"appearanceTools": true,
		"layout": {
			"contentSize": "650px",
			"wideSize": "1000px"
		},
		"color": {
			"defaultPalette": false,
			"palette": [
				{
					"slug": "orange",
					"color": "#e76f51",
					"name": "Orange"
				},
				{
					"slug": "dark-gray",
					"color": "#264653",
					"name": "Dark Gray"
				}
			],
			"gradients": [
				{
					"slug": "orange-to-dark-gray",
					"gradient": "linear-gradient(180deg,var(--wp--preset--color--orange) 33%,var(--wp--preset--color--dark-gray) 33%)",
					"name": "Orange to Dark Gray"
				}
			]
		},
		"typography": {
			"fontFamilies": [
				{
					"slug": "primary",
					"fontFamily": "'Montserrat', sans-serif",
					"name": "Primary"
				}
			]
		},
		"custom": {
			"sidebar-border": "solid 1px var(--wp--preset--color--orange)"
		}
	},
	"styles": {
		"color": {
			"background": "var(--wp--preset--color--dark-gray)",
			"text": "var(--wp--preset--color--white)"
		},
		"typography": {
			"fontFamily": "var(--wp--preset--font-family--primary)"
		},
		"elements": {
			"h1": {
				"color": {
					"background": "var(--wp--preset--color--orange)",
					"text": "var(--wp--preset--color--dark-gray)"
				}
			},
			"link": {
				"color": {
					"text": "var(--wp--preset--color--orange)"
				}
			}
		},
		"blocks": {
			"core/navigation": {
				"color": {
					"text": "var(--wp--preset--color--white)"
				},
				"typography": {
					"fontSize": "1.2rem",
					"fontWeight": "bold"
				}
			}
		}
	},
	"templateParts": [
		{
			"area": "header",
			"name": "header",
			"title": "Header"
		},
		{
			"area": "footer",
			"name": "footer",
			"title": "Footer"
		}
	],
	"customTemplates": [
		{
			"name": "page-landing",
			"title": "Page (Landing)",
			"postTypes": [ "page" ]
		}
	]
}
